<Page x:Class="Pentago.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pentago"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="263.567"
      Title="Menu">

    <Grid Background="Transparent">
        <StackPanel>
            <Button Style="{StaticResource RoundButtonTemplate}" Content="Single player" Margin="0 55 0 12" Click="PlayerButton_Click"/>
            <Button Style="{StaticResource RoundButtonTemplate}" Content="Multiplayer"  Margin="12" Click="PlayerButton_Click"/>
            <Button Style="{StaticResource RoundButtonTemplate}" Content="Rules"  Margin="12" Click="RulesButton_Click"/>
            <Button Style="{StaticResource RoundButtonTemplate}" Content="Exit"  Margin="12" Click="Exit_Click"/>
        </StackPanel>

    </Grid>
</Page>
